<Application x:Class="TXTReader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="src_nocover" UriSource="pack://application:,,,/res/no_cover.png"/>
            <BitmapImage x:Key="cs_toolong" UriSource="pack://application:,,,/res/cs_toolong.png"/>
            <BitmapImage x:Key="cs_tooshort" UriSource="pack://application:,,,/res/cs_tooshort.png"/>
            <BitmapImage x:Key="cs_index" UriSource="pack://application:,,,/res/cs_index.png"/>
            <BitmapImage x:Key="cs_index_green" UriSource="pack://application:,,,/res/cs_index_green.png"/>
            <Storyboard x:Key="anim_in_delay_fadeout">
                <DoubleAnimation To="1.0" Storyboard.TargetProperty="Opacity" Duration="0"/>
                <DoubleAnimation To="0.0" 
                BeginTime="0:0:0:1.0" Duration="0:0:0:1.0"
                Storyboard.TargetProperty="Opacity"
            />
            </Storyboard>
        </ResourceDictionary>
    </Application.Resources>
</Application>
