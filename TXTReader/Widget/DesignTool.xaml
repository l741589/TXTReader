<UserControl x:Class="TXTReader.Widget.DesignTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cvt="clr-namespace:TXTReader.Converter"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <cvt:BookmarkConverter x:Key="bmkcvt"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" 
            Text="fdgfgghfdfgfhgjggfhghffhgghfhfghgjgfhgjgjgfhgjfgfjfghfghgfjfghfhfhjg"
            Height="64" Grid.Column="0" Grid.Row="1"/>
        <ProgressBar Grid.Column="0" Grid.Row="0" Foreground="#b0ffe0"
                     BorderBrush="Transparent"
                     Background="Transparent" Value="30" Panel.ZIndex="-1" Grid.RowSpan="2">
        </ProgressBar>
    </Grid>
</UserControl>
